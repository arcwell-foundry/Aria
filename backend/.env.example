# REQUIRED - App will not start without these
# SUPABASE_URL=
# SUPABASE_SERVICE_ROLE_KEY=
# ANTHROPIC_API_KEY=
# APP_SECRET_KEY=
# OPENAI_API_KEY= (required for Graphiti/Neo4j embeddings)
#
# OPTIONAL - Features degrade gracefully without these
# NEO4J_URI=bolt://localhost:7687
# COMPOSIO_API_KEY=
# EXA_API_KEY=
# TAVUS_API_KEY=
# DAILY_API_KEY=
# RESEND_API_KEY=
# STRIPE_SECRET_KEY=

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key

# OpenAI (required for Graphiti/Neo4j embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# Neo4j (Graphiti) Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Tavus (Phase 6)
TAVUS_API_KEY=your-tavus-api-key
TAVUS_PERSONA_ID=your-tavus-persona-id

# Daily.co (Phase 6)
DAILY_API_KEY=your-daily-api-key

# Composio OAuth
COMPOSIO_API_KEY=your-composio-api-key
# Composio Base URL (optional, defaults to https://api.composio.dev)
# COMPOSIO_BASE_URL=https://api.composio.dev

# Application Settings
APP_SECRET_KEY=your-secret-key-at-least-32-characters-long
APP_ENV=development
APP_URL=http://localhost:5173

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=aria@yourdomain.com

# Billing (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PRICE_ID=your-stripe-price-id

# Web Search & Enrichment (Exa)
EXA_API_KEY=your-exa-api-key

# Skills.sh Integration (optional)
# SKILLS_SH_API_URL=https://api.skills.sh/v1

# Background Scheduler (set to "false" to disable)
ENABLE_SCHEDULER=true
